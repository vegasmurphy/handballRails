<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @league.name %>
</p>

<%= link_to 'Edit', edit_league_path(@league) %> |
<%= link_to 'Back', leagues_path %>

<table class="table">
  <thead>
    <tr>
      <th>Year</th>
      <th>Semester</th>
      <th>League</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.year %></td>
        <td><%= tournament.semester %></td>
        <td><%= League.find(tournament.league_id).name %></td>
        <td><%= link_to 'Show', [tournament.league, tournament] %></td>
        <td><%= link_to 'Edit', edit_league_tournament_path(tournament.league, tournament) %></td>
        <td><%= link_to 'Destroy', [tournament.league,tournament], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>