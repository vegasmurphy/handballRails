<h1>Listing games</h1>
<div class="bs-example">
    <ul class="nav nav-tabs">

      <% for i in 1..12 %>
        <li><a data-toggle="tab" href=<%="#Fecha"+i.to_s%>><%="Fecha "+i.to_s%></a></li>
      <% end %>
      </ul>
        <div class="tab-content">
      <% for i in  1..12%>
        <div id= <%="Fecha"+i.to_s%> class="tab-pane fade">
            <table class="table table-bordered">
  <thead>
    <tr>
      <th>Team</th>
      <th>Opponent</th>
      <th>Team score</th>
      <th>Opponent score</th>
      <th>Date</th>
      <th>Location</th>      
      <th>Liga</th>
      <th>fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <% if game.fecha==i %>
        
        <tr>
          <td><%= link_to game.team.name, team_path(game.team.id) %></td>
          <td><%= link_to game.opponent.name, team_path(game.opponent.id) %></td>
          <td><%= game.team_score %></td>
          <td><%= game.opponent_score %></td>
          <td><%= game.date %></td>
          <td><%= game.location %></td>
          <td><%= game.tournament.league.name %></td>
          <td><%= game.fecha %></td>
          <td><%= link_to 'Show', game %></td>
          <td><%= link_to 'Edit', edit_game_path(game) %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
        </div>
      <% end %>       
      </div>
